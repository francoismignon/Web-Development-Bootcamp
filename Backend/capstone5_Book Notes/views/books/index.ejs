<%- include('../partials/header') %>
 <a href="/books/new" type="button" class="btn btn-primary">Ajouter un livre</a>
<div class="container">
    <div class="row g-4">
        <%books.forEach(book=>{%>
            <div class="col-2 mx-2">
                <div class="card">
                    <img src="<%= book.cover_url %>" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Titre: <%= book.title %></h5>
                        <p class="card-text">Auteur: <%= book.last_name %> <%= book.first_name %></p>
                        <p class="card-text">Date: <%= book.read_date.toLocaleDateString('fr-BE') %></p>
                        <p class="card-text">Note: <%= book.rating %></p>
                        <a href="/books/<%= book.id_book %>/edit" class="btn btn-primary">Modifer</a>
                        <form action="/books/<%= book.id_book %>/delete" method="post">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        <%});%>
    </div>
</div>
<%- include('../partials/footer') %>